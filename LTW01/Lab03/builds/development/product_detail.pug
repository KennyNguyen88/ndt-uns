extends template
include mixins/mixin
block btitle
    title Product Detail | LTW01
block content
    .container
        .row
            .col-sm-12.hidden-xs
                -
                    var list= {
                        'index.html':'Home',
                        'categories.html':'Products',
                        '#':'Product 01'
                    }
                +breadcrumb(list)
        .row.marginb-2rem#product-detail
            .col-lg-9
                .row
                    .col-sm-6.product-images
                        .row.marginb-1rem
                            .col-xs-12.product-thumb
                                img.img-responsive(src="../images/product-gallery/large-image.jpg")
                        .row
                            .col-xs-3.product-small-image
                                a(href="#") #[img(src="../images/product-gallery/thumb_1.jpg")]
                            .col-xs-3.product-small-image
                                a(href="#") #[img(src="../images/product-gallery/thumb_2.jpg")]
                            .col-xs-3.product-small-image
                                a(href="#") #[img(src="../images/product-gallery/thumb_3.jpg")]
                            .col-xs-3.product-small-image
                                a(href="#") #[img(src="../images/product-gallery/thumb_4.jpg")]
                    .col-sm-6
                        h6.product-name Product 01
                        h6.product-price $100
                        p Available In Stock
                        form.form-horizontal
                            .form-group
                                label.col-xs-3.control-label(for="inputSize") Size
                                .col-xs-9
                                    select#inputSize.form-control
                                        option 10
                                        option 20
                                        option 30
                            .form-group
                                label.col-xs-3.control-label(for="inputQuantity") Quantity
                                .col-xs-9
                                    select#inputQuantity.form-control
                                        option 1
                                        option 2
                                        option 3
                            .form-group
                                .col-xs-offset-3.col-xs-9
                                    a.btn.btn-primary ADD TO CART
                            .form-group
                                label.radio-inline.yellow
                                    input(type="radio" name="ratingRadio" value="1")
                                    div &nbsp
                                label.radio-inline.yellow
                                    input(type="radio" name="ratingRadio" value="2")
                                    div &nbsp
                                label.radio-inline.yellow
                                    input(type="radio" name="ratingRadio" value="3")
                                    div &nbsp
                                label.radio-inline.grey
                                    input(type="radio" name="ratingRadio" value="4")
                                    div &nbsp
                                label.radio-inline.grey
                                    input(type="radio" name="ratingRadio" value="5")
                                    div &nbsp
            .col-lg-3
                include partials/sidebar
        .row
            .col-xs-12
                ul.nav.nav-tabs
                    li.active
                        a(href="#ShortDescription" aria-controls="home" role="tab" data-toggle="tab") Short Description
