extends template
include mixins/mixin
block btitle
    title Contact | LTW01
block content
    .container
        .row
            .col-sm-12.hidden-xs
                -
                    var list= {
                    'index.html':'Home',
                    '#':'Contact'
                    }
                +breadcrumb(list)
        .row.marginb-2rem
            .col-lg-9
                h1 CONTACT
                .row
                    h3 Address
                    .col-xs-12
                        .panel.panel-default
                            .panel-body
                                p.title HCM University Of Science
                                p 227 Nguyen Van Cu Street, District 5, Ho Chi Minh City, Vietnam
                                p.title Phone
                                p (028)62884499
                                .row
                                    .col-xs-12
                                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.635996946796!2d106.6801572653791!3d10.762511292330961!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f1bf8da4697%3A0x5c1e00e1d6a2b7a6!2zSSwgMjI3IE5ndXnhu4VuIFbEg24gQ-G7qywgcGjGsOG7nW5nIDQsIFF14bqtbiA1LCBI4buTIENow60gTWluaCwgVmlldG5hbQ!5e0!3m2!1sen!2s!4v1499308962662" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                .row
                    h3.marginb-2rem Leave Us a Message
                    .col-xs-12
                        .panel.panel-default
                            .panel-body
                                form.form-horizontal
                                    .form-group
                                        label.col-sm-3.control-label.hidden-xs(for="inputName") Name
                                        .col-xs-12.col-sm-9
                                            input#inputName.form-control(type="text" placeholder="Nguyen Duc Trung")
                                    .form-group
                                        label.col-sm-3.control-label.hidden-xs(for="inputEmail") Email
                                        .col-xs-12.col-sm-9
                                            input#inputEmail.form-control(type="email" placeholder="ndt@example.com")
                                    .form-group
                                        label.col-sm-3.control-label.hidden-xs(for="inputMessage") Message
                                        .col-xs-12.col-sm-9
                                            textarea#inputMessage.form-control(placeholder="Input Message" rows="3")
                                    .form-group
                                        .col-xs-12.col-sm-offset-3.col-sm-9.text-right
                                            a.btn.btn-primary Submit
            .col-lg-3
                include partials/sidebar