@{

    //****************** Xử lý Bảo mật  **********
    var NhanVien = (XL_NHAN_VIEN)Session["Nhan_vien_Dang_nhap"];
    if (NhanVien == null)
    {
        Response.Write("Người dùng chưa Đăng nhập");
        Response.End();
    }
    //****************** Khởi động Dữ liệu Nguồn-Nội bộ **********
    var Du_lieu = XL_DU_LIEU.Khoi_dong_Du_lieu_Ung_dung();
    var Cua_hang = Du_lieu.Cua_hang;
    var Danh_sach_Tivi = Du_lieu.Danh_sach_Tivi;
    var Danh_Sach_Nhom_Tivi = Du_lieu.Cua_hang.Danh_Sach_Nhom_Tivi;
    var Danh_Sach_Nhan_Vien = Du_lieu.Cua_hang.Danh_sach_Nhan_vien;

    //******************* Khai báo Biến  ********************
    var Chuoi_HTML_Thong_bao = "";
    //####### Chức năng Tra cứu : 
    var Chuoi_Tra_cuu = "";// Biến Nhập
    var Danh_sach_Tivi_Xem = Danh_sach_Tivi; // Biến Kết quả
    //####### Chức năng bán Tivi :   
    var Ma_so_Tivi = "";// Biến Nhập 
    var So_luong = 1;// Biến Nhập
    var Ban_Hang = new XL_BAN_HANG(); // Biến Kết quả 

    //******************* Nhập liệu cho Biến Nhập nếu có - Tính Biến kết quả nếu Hợp lệ   *****************
    if (Request["Th_Chuoi_Tra_cuu"] != null)
    {
        Chuoi_Tra_cuu = Request["Th_Chuoi_Tra_cuu"];
        Danh_sach_Tivi_Xem = Du_lieu.Tra_cuu_Tivi(Chuoi_Tra_cuu, Danh_sach_Tivi);
        Danh_sach_Tivi_Xem = Danh_sach_Tivi_Xem.OrderBy(Tivi => Tivi.Don_gia_Ban).ToList();
    }

    if (Request["Th_Ma_so_Tivi"] != null)
    {
        Ma_so_Tivi = Request["Th_Ma_so_Tivi"];
        So_luong = int.Parse(Request["Th_So_luong"]);
        var Tivi = Danh_sach_Tivi.FirstOrDefault(x => x.Ma_so == Ma_so_Tivi);
        //Có tivi, số lượng bán > 0, số lượng bán <= số lượng tồn, loại tivi phải nằm trong quyền bán của nhân viên
        var Hop_le = (Tivi != null) && So_luong >= 1 && So_luong <= Du_lieu.Tinh_So_luong_Ton_Tivi(Tivi) && NhanVien.Danh_sach_Nhom_Tivi.Any(x => x.Ma_so == Tivi.Nhom_Tivi.Ma_so);
        if (Hop_le)
        {            
            Ban_Hang.So_luong = So_luong;
            Ban_Hang.Don_gia = Tivi.Don_gia_Nhap;
            Ban_Hang.Ngay = DateTime.Today;
            Ban_Hang.Tien = So_luong * Tivi.Don_gia_Nhap;
            var Kq_Ghi = Du_lieu.Ghi_Ban_hang_Moi(Tivi, Ban_Hang);
            // Lưu ý : Chưa xét trường hợp của Kq_Ghi 
            Chuoi_HTML_Thong_bao = "<div class='alert alert-success'>Tổng tiền phải trả " + So_luong
                                        + " " + Tivi.Ten + " là "
                                 + Ban_Hang.Tien.ToString("n0", Du_lieu.Dinh_dang_VN) + "</div>";
        }
        else
        {
            Chuoi_HTML_Thong_bao = "<div class='alert alert-warning'>Dữ liệu Nhập không hợp lệ</div>";
        }
    }
    //******************* Kết xuất  **********
    var Chuoi_HTML_Danh_sach_Tivi = Du_lieu.Tao_Chuoi_HTML_Danh_sach_Tivi(Danh_sach_Tivi_Xem);
    var Chuoi_HTML_Doanh_Thu = Du_lieu.Tao_Chuoi_HTML_Doanh_Thu_Nhan_Vien(Danh_sach_Tivi, NhanVien);

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
          integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body style="font-family:Arial;width:100%;box-sizing:border-box;
              margin:0px;;padding:0px;overflow-x:hidden" class="container-fluid">
    <form method="post">
        <div class="CUA_SO_PET" style="background-color:aliceblue;margin:10px">
            <div class="btn PET" style="margin-left:0px">
                <img src="@Du_lieu.Dia_chi_Media/PET.png"
                     style="width:40px;height:30px;" />
                <div class="btn TOM_TAT" style="color:blue">Mô hình - Công nghệ - Kỹ thuật</div>
            </div>
            <div class="btn btn-outline-primary" style="background-color:white;color:blue">@Cua_hang.Ten</div>
        </div>
        <div class="CUA_SO_CHUC_NANG" style="background-color:gray;margin:10px">
            <div class="DANH_SACH_CHUC_NANG">
                <div class="btn  CHUC_NANG">
                    <form method="post">
                        <input name="Th_Chuoi_Tra_cuu" style="height:30px"
                               spellcheck="false" autocomplete="off" value="@Chuoi_Tra_cuu" />
                    </form>
                </div>
                <div class="btn  CHUC_NANG">
                    <form method="post">
                        <input name="Th_Ma_so_Tivi" style="height:30px;width:100px" placeholder="Mã số Tivi" required="required"
                               spellcheck="false" autocomplete="off" value="@Ma_so_Tivi" />
                        <input name="Th_So_luong" style="height:30px;width:60px" required="required" type="number" min="1"
                               spellcheck="false" autocomplete="off" value="@So_luong" />
                        <button class="btn btn-danger" type="submit">Đồng ý</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="CUA_SO_KET_QUA" style="background-color:white;margin:10px">
            @Html.Raw(Chuoi_HTML_Thong_bao)
            <h2>Thông tin cho nhân viên</h2>
            @Html.Raw(Chuoi_HTML_Doanh_Thu)
            <h2>Danh sách Tivi</h2>
            @Html.Raw(Chuoi_HTML_Danh_sach_Tivi)            
        </div>
    </form>



</body>
</html>
