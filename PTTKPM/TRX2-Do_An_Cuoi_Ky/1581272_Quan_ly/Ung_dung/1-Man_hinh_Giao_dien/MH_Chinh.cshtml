@using System.Xml;
@{
    //****************** Khởi động Dữ liệu Nguồn-Nội bộ **********
    var Ung_dung = XL_UNG_DUNG.Khoi_dong_Ung_dung();
    var Nguoi_dung = (XL_NGUOI_DUNG)Session["Nguoi_dung_Dang_Nhap"];
    if (Nguoi_dung == null) { Response.Write("Người dùng không hợp lệ"); Response.End(); }
    //******************* Khai báo và Khởi động giá trị đầu cho Biến  ********************
    var Ma_so_Chuc_nang = Request["Th_Ma_so_Chuc_nang"]; // Biến Nhập
    if (Ma_so_Chuc_nang == null) { Ma_so_Chuc_nang = Nguoi_dung.Chuc_nang_Khoi_dong_MH_Chinh.Ma_so; };

    var Chuoi_HTML_Ket_qua = "";
    //var Chuoi_HTML_Xin_chao = Ung_dung.Tao_Chuoi_HTML_Xin_chao();
    if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Khoi_dong_MH_Chinh.Ma_so)
    {
        Chuoi_HTML_Ket_qua = Ung_dung.Khoi_dong_MH_Chinh();
    }
    else if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Tra_cuu_MonAn.Ma_so)
    {
        var Chuoi_Tra_cuu = Request["Th_Chuoi_Tra_cuu"];
        Chuoi_HTML_Ket_qua = Ung_dung.Tra_cuu(Chuoi_Tra_cuu);
    }
    else if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Chon_ThucDon.Ma_so)
    {
        var Ma_so_Thuc_don = Request["Th_Ma_so_Thuc_don"];
        if (Ma_so_Thuc_don != null)
        {
            Chuoi_HTML_Ket_qua = Ung_dung.Chon_Thuc_don(Ma_so_Thuc_don);
        }
    }
    else if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Chon_Cap_Nhat_Ho_So.Ma_so)
    {
        Chuoi_HTML_Ket_qua = Ung_dung.Tao_Chuoi_HTML_Nguoi_dung_Dang_nhap();
        Chuoi_HTML_Ket_qua += Ung_dung.Tao_Chuoi_HTML_Chuc_Nang();
        Chuoi_HTML_Ket_qua += "<iframe src='MH_Cap_nhat_Ho_so_Nhan_vien.cshtml'" +
                                    " style='width:100%;height:500px;border:none'>" +
                              "</iframe>";

    }
    else if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Chon_Xem_Mon_An_Theo_Thuc_Don.Ma_so)
    {
        Chuoi_HTML_Ket_qua =  Ung_dung.Khoi_dong_MH_Chinh();

    }
    else if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Chon_THEM_MOI_MON_AN.Ma_so)
    {
        Chuoi_HTML_Ket_qua = Ung_dung.Tao_Chuoi_HTML_Nguoi_dung_Dang_nhap();
        Chuoi_HTML_Ket_qua += Ung_dung.Tao_Chuoi_HTML_Chuc_Nang();
        Session["Mon_an_Chon"] = null;
        Chuoi_HTML_Ket_qua += "<iframe src='MH_Them_moi_Mon_an.cshtml'" +
                                " style='width:100%;height:500px;border:none'>" +
                                "</iframe>";
    }
    else if (Ma_so_Chuc_nang == Nguoi_dung.Chuc_nang_Chon_Cap_Nhat_Mon_An.Ma_so)
    {

        Chuoi_HTML_Ket_qua = Ung_dung.Tao_Chuoi_HTML_Nguoi_dung_Dang_nhap();
        Chuoi_HTML_Ket_qua += Ung_dung.Tao_Chuoi_HTML_Chuc_Nang();
        var Ma_so_Thuc_don = Request["Th_Ma_so_Thuc_don"];
        var Ma_so_Mon_an = Request["Th_Ma_so_Mon_an"];

        Session["Mon_an_Chon"] = Ung_dung.Tra_cuu_Mon_an_theo_Ma_so(Ma_so_Mon_an);
        Chuoi_HTML_Ket_qua += "<iframe src='MH_Cap_nhat_Thong_tin_Mon_an.cshtml'" +
                            " style='width:100%;height:500px;border:none'>" +
                            "</iframe>";
    }


    }
<!DOCTYPE html>
