              margin:0px;padding:0px;overflow-x:hidden" class="container-fluid">
    <div class="CUA_SO_TIEU_DE dropdown" style="background-color:aliceblue;margin:10px">
        <div class="btn PET" style="margin-left:0px" data-toggle="dropdown">
            <img src="@Ung_dung.Dia_chi_Media/LOGO.png"
                 style="width:60px;height:50px;" />
            @*<div class="btn TOM_TAT" style="color:blue;text-align:center">
                    Mô hình - Công nghệ - Kỹ thuật
                    <br /><b><i>Đơn giản</i></b>
                </div>*@
        </div>


        <div class="CUA_SO_CHUC_NANG dropdown-menu" style="background-color:gray;margin:10px">
            <div class="DANH_SACH_CHUC_NANG">
                <div class="btn  CHUC_NANG">
                    <form method="post">
                        <input name="Th_Ma_so_Chuc_nang" type="hidden" value="@Nguoi_dung.Chuc_nang_Chon_ThucDon.Ma_so" />
