@{
    //****************** Xử lý Bảo mật  **********
    var NhanVien = (XL_NHAN_VIEN)Session["Nhan_vien_Dang_nhap"];
    if (NhanVien == null)
    {
        Response.Write("Người dùng chưa Đăng nhập");
        Response.End();
    }
    var Du_lieu = XL_DU_LIEU.Khoi_dong_Du_lieu_Ung_dung();
    //Du_lieu.Nhan_vien = NhanVien;

    //Chức năng nộp đơn
    var NgayBatDauNghi = DateTime.Now.Date.ToString("yyyy-MM-dd");
    var NgayKetThucNghi = DateTime.Now.Date.ToString("yyyy-MM-dd");
    var LyDoNghi = "";
    var Chuoi_HTML_Thong_bao = "";
    if (Request["Th_NgayBatDau"] != null)
    {
        NgayBatDauNghi = Request["Th_NgayBatDau"];
        NgayKetThucNghi = Request["Th_NgayKetThuc"];
        int SoNgay = (int) Convert.ToDateTime(NgayKetThucNghi).Subtract(Convert.ToDateTime(NgayBatDauNghi)).TotalDays;
        LyDoNghi = Request["Th_Ly_Do"];
        var HopLe = Convert.ToDateTime(NgayBatDauNghi).Date >= DateTime.Now.Date && SoNgay >=0;
        if (HopLe)
        {
            var Kq_Ghi = Du_lieu.Ghi_Nop_Don_Moi(NhanVien,NgayBatDauNghi, SoNgay, LyDoNghi);
            if (Kq_Ghi == "OK") {
                Chuoi_HTML_Thong_bao = "<div class='alert alert-success'>Đã nộp đơn thành công</div>";
            }
            else
            {
                Chuoi_HTML_Thong_bao = "<div class='alert alert-warning'>Không nộp đơn thành công </div>";
            }
        }
        else
        {
            Chuoi_HTML_Thong_bao = "<div class='alert alert-warning'>Không nộp đơn thành công - Ngày nghỉ không hợp lệ</div>";
        }

    }

    //******************* Kết xuất  **********    
    var Chuoi_HTML = Du_lieu.Tao_Chuoi_HTML(NhanVien);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
          integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
</head>
<body style="font-family:Arial;width:100%;box-sizing:border-box;
              margin:0px;padding:0px;overflow-x:hidden" class="container-fluid">
    <form method="post">
        <div class="CUA_SO_PET" style="background-color:aliceblue;margin:10px">
            <div class="btn PET" style="margin-left:0px">
                <img src="@Du_lieu.Dia_chi_Media/PET.png"
                     style="width:40px;height:30px;" />
                <div class="btn TOM_TAT" style="color:blue;text-align:center">
                    Mô hình - Công nghệ - Kỹ thuật
                    <br /><b><i>Đơn giản</i></b>
                </div>
            </div>
            <div class="btn btn-outline-primary" style="background-color:white;color:blue">
                Phân tích & Thiết kế Phần mềm
                <br /> Kiểm tra trực tuyến lần 1
            </div>
            <div class="btn btn-outline-primary" style="background-color:white;color:saddlebrown">                
                Phân hệ Nhân Viên
            </div>
        </div>
        <div class="CUA_SO_CHUC_NANG" style="background-color:#ccc;margin:10px">
            <div class="DANH_SACH_CHUC_NANG">
                <div class="btn CHUC_NANG">
                    Ngày bắt đầu: <input name="Th_NgayBatDau" style="height:30px" type="date" value="@NgayBatDauNghi" required />
                </div>
                <div class="btn CHUC_NANG">
                    Ngày kết thúc: <input name="Th_NgayKetThuc" style="height:30px" type="date" value="@NgayKetThucNghi" required />
                </div>
                <div class="btn CHUC_NANG">
                    <input name="Th_Ly_Do" style="height:30px" spellcheck="false" autocomplete="off" value="@LyDoNghi" placeholder="Lý do" required />
                </div>
                <div class="btn  CHUC_NANG">
                    <button class="btn btn-primary" type="submit"> Nộp đơn </button>
                </div>
            </div>
        </div>
        <div class="CUA_SO_KET_QUA" style="background-color:white;margin:10px">
            @Html.Raw(Chuoi_HTML_Thong_bao)
            @Html.Raw(Chuoi_HTML)
       </div>
    </form>



</body>
