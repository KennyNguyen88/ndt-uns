@{   
    var Ma_so = "";//Biến Nhập
    var Dia_chi_MH_Chuc_nang = "MH_Thong_bao_PET.cshtml";//Biến Kq

    if (Request["Th_Ma_so"] != null)  // Nhập liệu
    {
        Ma_so = Request["Th_Ma_so"];
    }
    // Xử lý
    if (Ma_so == "CHAO_KHACH_THAM_QUAN")
    {
        Dia_chi_MH_Chuc_nang = "MH_Chao_Khach_tham_quan.cshtml";
    }
    else if (Ma_so == "CHAO_KHACH_HANG")
    {
        Dia_chi_MH_Chuc_nang = "MH_Chao_Khach_hang.cshtml";
    }
    else if (Ma_so == "CHAO_QUAN_LY")
    {
        Dia_chi_MH_Chuc_nang = "MH_Chao_Quan_ly.cshtml";
    }
    else if (Ma_so == "CHAO_NHAN_VIEN")
    {
        Dia_chi_MH_Chuc_nang = "MH_Chao_Nhan_vien.cshtml";
    }

 

}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous" />
</head>

<body style="font-family:Arial;height:5000vh;overflow-x:hidden">
    <div class="container-fluid">
        <div class="btn-group">
            <div id="Th_PET" class="btn PET" >
                <img src="../Media/PET.png" style="width:40px;height:30px" />
                <div class="btn border-0"
                     style="color:blue;text-align:left">Mô hình-Công nghệ-Kỹ thuật</div>
            </div>
        </div>

    </div>

    <div class="container-fluid">
        <form id="He_thong" method="post">

            <div class="DANH_SACH_CHUC_NANG">
                <div class="btn btn-primary CHUC_NANG"
                     onclick="Th_Ma_so.value = 'CHAO_KHACH_THAM_QUAN';He_thong.submit()">
                    Chào Khách tham quan
                </div>
                <div class="btn btn-primary CHUC_NANG"
                     onclick="Th_Ma_so.value='CHAO_KHACH_HANG';He_thong.submit()">
                    Chào Khách hàng
                </div>
                <div class="btn btn-primary CHUC_NANG"
                     onclick="Th_Ma_so.value='CHAO_QUAN_LY';He_thong.submit()">
                    Chào Quản lý
                </div>
                <div class="btn btn-primary CHUC_NANG"
                     onclick="Th_Ma_so.value='CHAO_NHAN_VIEN';He_thong.submit()">
                    Chào Nhân viên
                </div>
            </div>

            <iframe id="Khung_Chuc_nang" class="KHUNG_CHUC_NANG" src="@Dia_chi_MH_Chuc_nang"
                    style="height:4000vh;width:96vw; border:none;padding-top:10px;overflow-x:hidden"
                    scrolling="no"></iframe>

            <input id="Th_Ma_so" name="Th_Ma_so" type="hidden" />

        </form>
    </div>
</body>
</html>

<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
